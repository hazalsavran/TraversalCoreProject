@model List<Destination>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_UILayout.cshtml";
}



    <!-- about breadcrumb -->
    <section class="w3l-about-breadcrumb text-left">
        <div class="breadcrumb-bg breadcrumb-bg-about py-sm-5 py-4">
            <div class="container">
                <h2 class="title">Destinations </h2>
                <ul class="breadcrumbs-custom-path mt-2">
                    <li><a href="#url">Home</a></li>
                    <li class="active"><span class="fa fa-arrow-right mx-2" aria-hidden="true"></span> Destinations </li>
                </ul>
            </div>
        </div>
    </section>
    <!-- //about breadcrumb -->
    <!--  Work gallery section -->
    <section class="grids-1 py-5">
        <div class="grids py-lg-5 py-md-4">
            <div class="container">
                <h3 class="hny-title mb-5">Destinations</h3>
                <div class="row">
                @{
                    int i = 1;
                }
                    @foreach (var item in Model)
                {
                    <div class="col-lg-4 col-md-4 col-6 @(i == 2 ? "mt-md-0" :"")  @(i == 3 ? "mt-md-0 mt-4" :"") @(i > 3 ? "mt-lg-5 mt-4" :"")">
                        <div class="column">
                            <a href="/Destination/Detail/@item.DestinationId"><img src="@item.Image" alt="" class="img-fluid"></a>
                            <div class="info">
                                <h4><a href="/Destination/Detail/@item.DestinationId">@item.City</a></h4>
                                <p>@item.DayNight </p>
                                <div class="dst-btm">
                                    <h6 class="">Start From </h6>
                                    <span> $@item.Price</span>
                                </div>
                            </div>
                        </div>
                    </div>
                    i++;
                }
                </div>
            </div>
        </div>
    </section>
