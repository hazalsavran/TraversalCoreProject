@using Entity.Concrete
@model HighlightsViewModel


<div class="best-rooms py-5">
    <div class="container py-md-5">
        <div class="ban-content-inf row">
            <div class="maghny-gd-1 col-lg-6">
                <div class="maghny-grid">
                    <figure class="effect-lily border-radius  m-0">
                        <img class="img-fluid" src="@Model.Feature1.Post1Image" alt="" />
                        <figcaption>
                            <div>
                                <h4>@Model.Feature1.Title</h4>
                                <p>@Model.Feature1.Post1Description </p>
                            </div>

                        </figcaption>
                    </figure>
                </div>
            </div>
            <div class="maghny-gd-1 col-lg-6 mt-lg-0 mt-4">
                <div class="row">
                    @{
                        int i = 1;
                    }
                    @foreach (var item in Model.Features)
                    {
                        <div class="maghny-gd-1 col-6 @(i >= 3 ? "mt-4" : "")">
                            <div class="maghny-grid">
                                <figure class="effect-lily border-radius">
                                    <img class="img-fluid" src="@item.Image" alt="" />
                                    <figcaption>
                                        <div>
                                            <h4>@item.Title</h4>
                                            <p>@item.Description </p>
                                        </div>

                                    </figcaption>
                                </figure>
                            </div>
                        </div>
                        i++;
                    }
                </div>
            </div>
        </div>
    </div>
</div>